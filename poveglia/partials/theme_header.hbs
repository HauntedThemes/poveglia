<header>
    <div class="container">
        <div class="row">
            <div class="col-3 ml-auto">
                <div class="blog-logo">
                    <a href="{{@site.url}}" title="{{@site.title}}">
                        {{#if @site.logo}} <img src="{{@site.logo}}" alt="{{@site.title}}" /> {{else}}<span>{{@site.title}}</span>{{/if}} 
                    </a>
                </div>
            </div>
            <div class="col-9">
                <div class="inner">
                    <div class="navigation">
                        <a href="#" class="navigation-trigger" data-toggle="modal" data-target="#menu">
                            <svg width="19" height="16" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><use xlink:href="#path0_fill" transform="translate(.344 .195)"/><defs><path id="path0_fill" d="M1.044 2.128h15.912c.577 0 1.044-.476 1.044-1.064C18 .477 17.533 0 16.956 0H1.044C.467 0 0 .477 0 1.064c0 .588.467 1.064 1.044 1.064zm15.912 4.387H1.044C.467 6.515 0 6.993 0 7.58c0 .589.467 1.064 1.044 1.064h15.912c.577 0 1.044-.475 1.044-1.064 0-.586-.467-1.064-1.044-1.064zm0 6.515H1.044C.467 13.03 0 13.508 0 14.094c0 .589.467 1.064 1.044 1.064h15.912c.577 0 1.044-.476 1.044-1.064 0-.586-.467-1.064-1.044-1.064z"/></defs></svg>
                        </a>
                        {{navigation}}
                    </div>
                    <a href="#" data-toggle="modal" data-target="#search" class="search-trigger"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 56.966 56.966"><path d="M55.146 51.887L41.588 37.786A22.926 22.926 0 0 0 46.984 23c0-12.682-10.318-23-23-23s-23 10.318-23 23 10.318 23 23 23c4.761 0 9.298-1.436 13.177-4.162l13.661 14.208c.571.593 1.339.92 2.162.92.779 0 1.518-.297 2.079-.837a3.004 3.004 0 0 0 .083-4.242zM23.984 6c9.374 0 17 7.626 17 17s-7.626 17-17 17-17-7.626-17-17 7.626-17 17-17z" fill="#fff"/></svg></a>
                    <a href="#" data-toggle="modal" data-target="#bookmark" class="bookmark-trigger"><span class="counter hidden"></span><i class="far fa-bookmark"></i><i class="fas fa-bookmark"></i></a>
                </div>
            </div>
        </div>
    </div>
    {{#is "post"}}
    <div class="info-bar">
        <div class="progress" data-read='{{t "read"}}'></div>
    </div>
    {{/is}}
</header>

<!-- Search Modal -->
<div class="modal fade" id="search" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <a href="#" data-dismiss="modal" aria-label="Close" class="close btn">
                    <i class="fas fa-times"></i>
                </a>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <form class="search">
                                <input id="search-field" placeholder="{{t "Search"}}" autocomplete="off"/>
                            </form>
                            <div id="results" class="loop" data-no-results-description='{{t "Your search did not match any articles. Try something else."}}' data-no-results='{{t "No results were found"}}' data-other='{{t "Other"}}' data-bookmark-article='{{t "Bookmark article"}}' data-remove-bookmark='{{t "Remove bookmark"}}'></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bookmark Modal -->
<div class="modal fade" id="bookmark" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <a href="#" data-dismiss="modal" aria-label="Close" class="close btn">
                    <i class="fas fa-times"></i>
                </a>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="modal-title">{{t "Bookmarks"}}</h3>
                            <div class="bookmark-container">
                                <p class="no-bookmarks">{{{t "You haven't yet saved any bookmarks. To bookmark a post, just click <i class='far fa-bookmark'></i>."}}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Menu Modal -->
<div class="modal fade" id="menu" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <a href="#" data-dismiss="modal" aria-label="Close" class="close btn">
                    <i class="fas fa-times"></i>
                </a>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="modal-title">{{t "Menu"}}</h3>
                            <div class="modal-nav"></div>
                        </div>
                    </div>
                    <div class="row additional">
                        <div class="col-sm-12">
                            {{#if @labs.subscribers}}
                                <h3 class="modal-title">{{t "Newsletter"}}</h3>
                                <div class="subscribe-container">
                                    <p>{{t "Subscribe to our newsletter to receive our latest news."}}</p>
                                    {{subscribe_form
                                        form_class="gh-signin"
                                        input_class="gh-input"
                                        placeholder=(t "Your email address")
                                    }}
                                </div>
                            {{/if}}
                            <h3 class="modal-title">{{t "Social"}}</h3>
                            <ul class="share">
                                {{#if @site.facebook}}
                                    <li><a href="{{facebook_url}}" class="facebook" target="_blank" data-toggle="tooltip" data-placement="top" title="{{@site.facebook}}"><i class="fab fa-facebook-f" aria-hidden="true"></i></a></li>
                                {{/if}}
                                {{#if @site.twitter}}
                                    <li><a href="{{twitter_url}}" class="twitter" target="_blank" data-toggle="tooltip" data-placement="top" title="{{@site.twitter}}"><i class="fab fa-twitter" aria-hidden="true"></i></a></li>
                                {{/if}}
                                <li><a href="https://www.youtube.com/" class="youtube" title="{{t "Youtube"}}" target="_blank" data-toggle="tooltip" data-placement="top"><i class="fab fa-youtube" aria-hidden="true"></i></a></li>
                                <li><a href="https://www.instagram.com/" class="instagram" title="{{t "Instagram"}}" target="_blank" data-toggle="tooltip" data-placement="top"><i class="fab fa-instagram" aria-hidden="true"></i></a></li>
                                <li><a href="https://plus.google.com" class="google-plus" title="{{t "Google+"}}" target="_blank" data-toggle="tooltip" data-placement="top"><i class="fab fa-google-plus-g"></i></a></li>
                                <li><a href="{{@site.url}}/rss" target="_blank" data-toggle="tooltip" data-placement="top" title="{{t "RSS Feed"}}"><i class="fas fa-rss" aria-hidden="true" data-toggle="tooltip" data-placement="top"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>