    <footer class="site-footer clearfix">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    {{#if @labs.subscribers}}
                    <div class="row">
                        <div class="col-xl-6 col-md-8 mr-auto ml-auto">
                            <h3>Newsletter</h3>
                            <div class="subscribe-container">
                                <p>Subscribe to our newsletter to receive our latest news.</p>
                                {{subscribe_form
                                    form_class="gh-signin"
                                    input_class="gh-input"
                                    placeholder="Your email address"
                                }}
                            </div>
                        </div>
                    </div>
                    {{/if}}
                    <ul class="share">
                        {{#if @blog.facebook}}
                            <li><a href="{{facebook_url}}" class="facebook" target="_blank" data-toggle="tooltip" data-placement="top" title="{{@blog.facebook}}"><i class="fab fa-facebook-f" aria-hidden="true"></i></a></li>
                        {{/if}}
                        {{#if @blog.twitter}}
                            <li><a href="{{twitter_url}}" class="twitter" target="_blank" data-toggle="tooltip" data-placement="top" title="{{@blog.twitter}}"><i class="fab fa-twitter" aria-hidden="true"></i></a></li>
                        {{/if}}
                        <li><a href="https://www.youtube.com/" class="youtube" title="Youtube" target="_blank" data-toggle="tooltip" data-placement="top"><i class="fab fa-youtube" aria-hidden="true"></i></a></li>
                        <li><a href="https://www.instagram.com/" class="instagram" title="Instagram" target="_blank" data-toggle="tooltip" data-placement="top"><i class="fab fa-instagram" aria-hidden="true"></i></a></li>
                        <li><a href="https://plus.google.com" class="google-plus" title="Google+" target="_blank" data-toggle="tooltip" data-placement="top"><i class="fab fa-google-plus-g"></i></a></li>
                        <li><a href="{{@blog.url}}/rss" target="_blank" data-toggle="tooltip" data-placement="top" title="RSS"><i class="fas fa-rss" aria-hidden="true" data-toggle="tooltip" data-placement="top"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container-fluid copyright">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>&copy; {{date format="YYYY"}}, <a href="{{@blog.url}}">{{@blog.title}}</a>. All Right Reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <a href="#" class="go-up btn"><i class="fas fa-arrow-up"></i></a>